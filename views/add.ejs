<%-include('./include/_header') %>

<main id="site-main">
    <div class="button-box">
        <a href="/users" class="btn btn-light"><i class="fa-solid fa-user-plus"></i>회원 목록</a>
    </div>

    <h2>회원 추가</h2>
    <p>회원 정보를 추가합니다.</p>
    <% if (typeof error !== "undefined" && error) { %>
        <div class="alert alert-danger user-alert"><%= error %></div>
    <% } %>
    <form method="POST" id="add-user">
        <div class="user-info">
            <div class="col-12">
                <label for="name" class="col-form-label">이름(Full Name)</label>
                <div>
                    <input type="text" class="form-control" name="name" id="name" placeholder="홍길동" value="<%= formData && formData.name ? formData.name : '' %>" required>
                </div>
            </div>
            <div class="col-12">
                <label for="nickname" class="col-form-label">닉네임(Nickname)</label>
                <div>
                    <input type="text" class="form-control" name="nickname" id="nickname" placeholder="길동링커" value="<%= formData && formData.nickname ? formData.nickname : '' %>" required>
                </div>
            </div>
            <div class="col-12">
                <label for="email" class="col-form-label">이메일(E-mail)</label>
                <div>
                    <input type="email" class="form-control" name="email" id="email" placeholder="linker@example.com" value="<%= formData && formData.email ? formData.email : '' %>" required>
                </div>
            </div>
            <div class="col-12">
                <label for="password" class="col-form-label">비밀번호(Password)</label>
                <div>
                    <input type="password" class="form-control" name="password" id="password" placeholder="******" required>
                </div>
            </div>
            <button type="submit">회원가입</button>
        </div>
    </form>
</main>

<%-include('./include/_footer') %>
