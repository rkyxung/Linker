          saveBtn.className = 'comment-submit';
          saveBtn.style.marginTop = '0';
          saveBtn.style.padding = '0.5vw 1vw';
          saveBtn.onclick = async () => {
            const newContent = textarea.value.trim();
            if (!newContent) {
              alert('댓글 내용을 입력해주세요.');
              return;
            }

            try {
              const response = await fetch(`/community/comment/${commentId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                credentials: 'same-origin',
                body: new URLSearchParams({ _method: 'PUT', content: newContent }).toString()
              });

              if (response.ok) {
                const data = await response.json();
                if (data.success) {
                  contentDiv.textContent = data.comment.content;
                  contentDiv.style.display = 'block';
                  textarea.remove();
                  buttonGroup.remove();
                } else {
                  alert('댓글 수정 중 오류가 발생했습니다.');
                }
              } else {
                alert('댓글 수정 중 오류가 발생했습니다.');
              }
            } catch (error) {
              console.error('댓글 수정 중 오류:', error);
              alert('댓글 수정 중 오류가 발생했습니다.');
            }
          };

          const cancelBtn = document.createElement('button');
          cancelBtn.textContent = '취소';
          cancelBtn.className = 'comment-submit';
          cancelBtn.style.marginTop = '0';
          cancelBtn.style.padding = '0.5vw 1vw';
          cancelBtn.style.background = '#ccc';
          cancelBtn.style.boxShadow = 'none';
          cancelBtn.onclick = () => {
            contentDiv.textContent = originalContent;
            contentDiv.style.display = 'block';
            textarea.remove();
            buttonGroup.remove();
          };

          buttonGroup.appendChild(saveBtn);
          buttonGroup.appendChild(cancelBtn);

          contentDiv.style.display = 'none';
          contentDiv.parentNode.insertBefore(textarea, contentDiv);
          textarea.parentNode.insertBefore(buttonGroup, textarea.nextSibling);
          textarea.focus();
        }

